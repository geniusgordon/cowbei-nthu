{
  "name": "cowbei-nthu",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:geniusgordon/cowbei-nthu.git",
  "author": "Gordon <geniusgordon@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently -p \" {name} \" -n \"CLIENT,SERVER\" -c \"bgGreen,bgBlue\" \"yarn run client\" \"yarn run server\"",
    "client": "cd client && yarn run start",
    "server": "babel-node server/index.js",
    "lint": "eslint server"
  },
  "dependencies": {
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-validator": "^3.0.0",
    "lodash": "^4.17.2",
    "moment": "^2.17.1",
    "mysql": "^2.12.0",
    "sequelize": "^3.27.0",
    "sqlite3": "^3.1.8"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.0.2",
    "concurrently": "^3.1.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^17.0.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "import"
    ],
    "settings": {
      "import/ignore": [
        "node_modules"
      ],
      "import/extensions": [
        ".js"
      ],
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".json"
          ]
        }
      }
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "next"
        }
      ],
      "import/default": "warn",
      "import/export": "warn",
      "import/named": "warn",
      "import/namespace": "warn",
      "import/no-amd": "warn",
      "import/no-duplicates": "warn",
      "import/no-extraneous-dependencies": "warn",
      "import/no-named-as-default": "warn",
      "import/no-named-as-default-member": "warn",
      "import/no-unresolved": "warn"
    }
  }
}
